<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Drive Hub"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- LoginActivity είναι η αρχική οθόνη -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity ξεκινάει μετά το login -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity android:name=".SearchCarsActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />


        <activity android:name=".BookingActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity android:name=".RegisterCarActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity android:name=".MyCarsActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity android:name=".MyBookingsActivity" />

        <activity android:name=".AdminReportsActivity" />

    </application>

</manifest>

